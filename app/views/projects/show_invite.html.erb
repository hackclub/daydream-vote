<div class="main">
  <div class="card big">
    <h1>You've been invited to join a team!</h1>
    
    <div class="card light">
      <h2><%= @invite.project.title %></h2>
      <p style="text-align: center; margin: 1rem 0;"><%= @invite.project.description %></p>
    </div>

    <div class="card light" style="padding-bottom: 1.5rem;">
      <h3 style="margin-bottom: 1rem;">Project Details</h3>
      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; font-size: 1rem;">
        <div>
          <strong>Event:</strong><br>
          <%= @invite.project.attending_event.name if @invite.project.attending_event %>
        </div>
        <div>
          <strong>Team size:</strong><br>
          <%= @invite.project.users.count + 1 %> member<%= 's' if @invite.project.users.count != 0 %>
        </div>
        <div>
          <strong>Invited by:</strong><br>
          <%= @invite.invited_by.email %>
        </div>
        <div>
          <strong>Expires:</strong><br>
          <%= @invite.expires_at.strftime("%B %d, %Y at %l:%M %p") %>
        </div>
      </div>
    </div>

    <div class="accept-options">
      <%= form_with url: accept_invite_path(@invite.token), local: true, method: :post, style: "display: inline;" do |form| %>
        <div class="submit-wrapper" style="margin: 0; max-width: none; width: auto;">
          <%= form.submit "Accept Invitation", class: "submit-button-elem" %>
          <img src="/button-clouds.svg" alt="" class="submit-clouds">
        </div>  
      <% end %>
      
      <%= form_with url: reject_invite_path(@invite.token), local: true, method: :post, style: "display: inline;" do |form| %>
        <%= form.submit "Decline", class: "decline-button", style: "background-color: #6b7280; color: white; padding: 1rem 2rem; border: none; font-size: 1.1rem; cursor: pointer; border-radius: 9999px; border-bottom: 2px solid #4b5563; transition: all 0.1s ease;" %>
      <% end %>
    </div>

    <div style="text-align: center; margin: 1rem 0;">
      <p style="font-size: 1rem; opacity: 0.8; margin: 0;">
        By accepting this invitation, you'll become a collaborator on this project.
      </p>
    </div>
  </div>
</div>
