<% @progress = :review %>

<div class="main">
  <div class="card big review-card">
    <h1>Review & Submit</h1>

    <% if @project.errors.any? %>
      <div class="error">
        <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>
        <ul>
          <% @project.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="card light game-card-wrapper">
      <div class="card light game-card">
        <div class="game-image">
          <% if @project.image.attached? %>
            <%= image_tag @project.image, class: "game-image-cover" %>
          <% end %>
        </div>
        <div class="game-info">
          <h2><%= @project.title %></h2>
          <p><%= @project.description %></p>
        </div>
        
        <div class="game-card-buttons">
          <div class="submit-wrapper review-button">
            <%= link_to "View on Itch.io", @project.itchio_url, target: "_blank", class: "submit-button-elem" %>
            <img src="/button-clouds.svg" alt="" class="submit-clouds">
          </div>
          
          <div class="submit-wrapper review-button">
            <%= link_to "View Git Repository", @project.repo_url, target: "_blank", class: "submit-button-elem" %>
            <img src="/button-clouds.svg" alt="" class="submit-clouds">
          </div>
        </div>
      </div>
    </div>

    <p style="text-align: center; margin-top: -0.5rem; margin-bottom: 2rem; margin-inline: auto; max-width: 400px;">
      This is exactly how your game will appear in <%= @project.attending_event.name.titleize %> voting <em>and</em> global voting.
    </p>

    <div class="external-links">
      <span style="font-weight: bold">Git Repository:</span> <%= link_to @project.itchio_url, @project.itchio_url, target: "_blank", class: "pink-link" %>
      <br>
      <span style="font-weight: bold">Itch.io Page:</span> <%= link_to @project.repo_url, @project.repo_url, target: "_blank", class: "pink-link" %>
    </div>

    <div class="team-members-section">
      <h3>Team Members</h3>
      <div class="members-grid">
        <% @project.users.each do |user| %>
          <div class="card light member-card">
            <div class="member-info">
              <div class="member-email">
                <strong><%= user.email %></strong>
                <% if user.profile_complete? %>
                  <span style="color: #10b981; margin-left: 0.25rem; font-size: 0.8rem;">✓</span>
                <% else %>
                  <span style="color: #f59e0b; margin-left: 0.25rem; font-size: 0.8rem;">⚠ Profile incomplete</span>
                <% end %>
              </div>
              <div class="member-role"><%= user.creator_positions.find_by(project: @project).role.humanize %></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>


    <% if @project.draft? %>
      <% unless @project.can_be_submitted? %>
        <p class="review-warning" style="color: #f59e0b;">
          <strong>Cannot Submit Yet:</strong> 
          <% if @project.has_pending_invites? %>
            All pending invites must be accepted before submission.
          <% elsif !@project.all_members_have_complete_profiles? %>
            All team members must complete their profiles before submission.
          <% end %>
        </p>
      <% end %>

      <p class="review-warning">Make sure this looks right, because once you press submit there's no going back!</p>
      <p class="review-shirt-notice">Once you submit, you'll be able to claim your T-shirt from the organizers!</p>

      <div class="wide">
        <div class="checkbox-option" style="margin-inline: auto; width: max-content; display: flex; align-items: start; justify-items: start; gap: 0.5rem">
          <%= check_box_tag :attendance_verification, "true", false, { required: true, disabled: !@project.can_be_submitted? } %>
          <div style="max-width: 400px">
          <%= label_tag "attendance_verification", "I'm currently in-person at #{@project.attending_event.name.titleize} and I commit to being truthful in all information I provide." %>
          </div>
        </div>
      </div>

      <div class="review-buttons">
        <div class="submit-wrapper review-button">
          <%= link_to "Go back", edit_project_path, class: "submit-button-elem" %>
          <img src="/button-clouds.svg" alt="" class="submit-clouds">
        </div>
        
        <div class="submit-wrapper review-button">
          <%= button_to "Submit to #{@project.attending_event.name.titleize}", submit_project_path, class: "submit-button-elem #{"disabled" unless @project.can_be_submitted?}", disabled: !@project.can_be_submitted? %>
          <img src="/button-clouds.svg" alt="" class="submit-clouds">
        </div>
      </div>
    <% elsif @project.submitted? %>
      <div style="text-align: center;">
        <p>Your project has been submitted. Thank you!</p>
        <p style="font-size: 1.5rem"><strong>You can now claim your shirt from the organizers!</strong></p>
        
        <div class="submit-wrapper review-button" style="margin-top: 1rem;">
          <%= link_to "Continue On To Voting", event_vote_path(@project.attending_event.name), class: "submit-button-elem" %>
          <img src="/button-clouds.svg" alt="" class="submit-clouds">
        </div>
      </div>
    <% end %>
  </div>
</div>